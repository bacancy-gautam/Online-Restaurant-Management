<h1>Category available in restaurant</h1>
<table class="table table-striped custom-table table-hover">
  <tr>
    <th>branch name</th>
    <th>category</th>
    <th colspan="2">action</th>
  </tr> 
  <% @restaurants.each do |restaurant| %>
    <tr>
      <td>
        <%= restaurant.name%>
      </td>
      <%counter=0%>
      <td>
        <ul>
        <% @category[restaurant.id].each do |category| %>
          <li><%=@category[restaurant.id][counter].name%></li>
          <%counter+=1%>
        <%end%>
      </li>
      </td>
      <td><%= link_to '',restaurantscategory_path(restaurant),class: "btn btn-success btn-xs fa fa-check", remote: true%>
      <%= link_to '', edit_restaurantscategory_path(restaurant), class: "btn btn-primary btn-xs fa fa-pencil", remote: true  %>
    </td>
    </tr>
  <%end%> 
</table>
