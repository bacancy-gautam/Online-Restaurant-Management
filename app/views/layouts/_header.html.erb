<div class="dark-bg sticky-top">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <nav class="navbar navbar-expand-lg navbar-light">
          <%= link_to "Listing", root_path,class: "navbar-brand"%>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
            <ul class="navbar-nav">
              <nav class="collapse navbar-collapse" id="primary-menu">
                <ul class="nav navbar-nav navbar-right">
                 <% if user_signed_in? %>
                 <li> <%= image_tag  current_user.image.url if current_user.image?  %>

                  <li><%= link_to 'My Account',static_pages_my_account_path, class: "btn btn-outline-light top-btn" %></li>
                  <li> <%= link_to('User Edit Profile', edit_user_path(current_user) , class: "btn btn-outline-light top-btn") %></li>
                  <li><%= link_to 'Favourites', favourites_path, class: "btn btn-outline-light top-btn" %></li>
                <li> <%= link_to('My Account', static_pages_my_account_path , class: "btn btn-outline-light top-btn") %></li> 
                 <li> <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-light top-btn") %></li>
                
                 <%else%>
                 <li><%= link_to "SignUp",new_user_registration_path, class: "btn btn-outline-light top-btn" %></li>&emsp;
                 <li><%= link_to "Login",new_user_session_path, class: "btn btn-outline-light top-btn" %></li>&emsp;
               </ul>
             </div>
             <%end%>
             <div class="dropdown">
              <button class="btn btn-outline-light top-btn" type="button" data-toggle="dropdown"><span class="icon-basket search-icon"></span>Cart(<%=Order.where(:id=>session[:order].keys).count%>)
                <span class="caret"></span></button>
                <div class="cart-dropdown">
                  <div class="cart-list">
                    <div class="product-widget">
                      <div class="product-img">
                        <img src="./img/product01.png" alt="">
                      </div>
                      <div class="product-body">
                      <%if !(session[:order].nil?)%>
                        <%@order=Order.where(:id=>session[:order].keys).includes(:food_item)%>
                     
                        <%if @order.count!=0%>

                          <%@order.each do |i|%>
                            <h3 class="product-name">
                    

                            Food Item::<%= i.food_item.name%><br></h3>
                            quantity::<%= i.quantity%><br>
                            Food price::<%= i.price%><br>
                            <%= link_to "remove",order_path(i),method:"delete",remote: true%><br>
                          <%end%>
                        <%else%>
                          <h4>Cart is Empty!</h4>
                        <%end%>
                      <%end%>
                        
                      </div>
                    </div>

                    

                  </div>
                 
                  <div class="cart-btns">
                   <%=link_to "checkout",new_master_order_path%>
                   <% if user_signed_in? %>
                    <%=link_to "my order",master_orders_path%>
                    <%end%>
                  </div>
                </div>
              </nav>
            </div>
          </div>
        </div>
      </div>
      <script>
        $("button").click(function(){
          $(".cart-dropdown").slideToggle();
        });
      </script>
