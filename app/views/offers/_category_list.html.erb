<% ct =  defined?(category) ? category : Restaurant.where(user_id: current_user.id).first.id %>
<%= label_tag :category %>
<%= select_tag "offer[category_id]", options_for_select(Restaurant.find(ct).categories.pluck(:name)), id: 'offer_category_id'%><br>


<script type="text/javascript">
  $("#offer_category_id").on("change", function()
    { 
      $.ajax({
        url: 'change_foodlist.js',
        method: 'GET',
        data: 
        {
          food: $(this).val()

        }
      });
    });
</script>