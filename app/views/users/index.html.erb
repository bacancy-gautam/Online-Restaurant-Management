<div id="users-page">
  <%= render partial: "users", locals: {users: @users} %>
</div>
<h1>Users</h1>
<table class="table table-striped table-bordered table-hover">
  <thead>
  <tr>
    <th class="col-md-2">no</th>
    <th class="col-md-2">Firstname</th>
    <th class="col-md-2">Username</th>
    <th class="col-md-2">Email</th>
    <th class="col-md-2">Phoneno</th>
    <th class="col-md-2">Status</th>
    <th class="col-md-3"></th>
  </tr>
  </thead>

  <tbody>
  <% $i = 1 %>
  <% @users.each do |user| %>
    <tr>
      <td class="col-md-2"><%= $i %></td>
      <td class="col-md-2"><%= user.firstname %></td>
      <td class="col-md-2"><%= user.username %></td>
      <td class="col-md-2"><%= user.email %></td>
      <td class="col-md-2"><%= user.phoneno %></td>
      <td class="col-md-2">
      <input type="checkbox" checked data-toggle="toggle">

      <% if user_signed_in?  %>
      <% if user.is_active == true  %>
      <%= link_to "Active" , change_user_status_user_path(user) %>
      <% else %>
      <%= link_to "Inactive",change_user_status_user_path(user)%>
      <% end %>
      <% end %>
      </td>
      <td class="col-md-4" ><%= link_to "show", user_path(user) , class: "btn btn-info" %>
      <%= link_to "edit", edit_user_path(user) , class: "btn  btn-warning" %>
      <%= link_to "delete", user_path(user), method: :delete, data: { confirm: 'Are you sure?' },class: "btn  btn-danger"%></td>
    </tr>
    <% $i = $i+1 %>
  <%end%>
  </tbody>
</table>
