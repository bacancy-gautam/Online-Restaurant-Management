<div class="tab-content">
  <div id="restaurant" class="tab-pane fade in active">
    <h3></h3>
    <section class="panel">
      <header class="panel-heading head-border">
          Restaurant
      </header>
      <table class="table table-striped custom-table table-hover">
        <thead>
          <tr>
            <th>No.</th>
            <th>Restaurant Name</th>
            <th>Phone No </th>
            <th>Email</th>
            <th>Opening Time</th>
            <th>Closing Time</th>
            <th>Branch Name</th>
            <th>Status</th>
            <th class="hidden-xs"> Action</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= restaurant.id %></td>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.phone_no %></td>
            <td><%= restaurant.email %></td>
            <td><%= restaurant.opening_time %></td>
            <td><%= restaurant.closing_time %></td>
            <td><%= restaurant.branch_name %></td>
            <td>
                <% if restaurant.status == true  %>
                  <%= link_to "Active" ,change_restaurant_status_restaurant_path(restaurant) %>
                <% else %>
                  <%= link_to "Inactive" ,change_restaurant_status_restaurant_path(restaurant) %>
                <% end %>
            </td>
            <td class="hidden-xs">
              <%= link_to '', restaurant_path(restaurant), class: "btn btn-success btn-xs fa fa-check" %>
              <%= link_to "", edit_restaurant_path(restaurant), class: "btn btn-primary btn-xs fa fa-pencil" %>
              <%= link_to "", restaurant_path(restaurant), class: "btn btn-danger btn-xs fa fa-trash-o", method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  </div>
</div>
